<div class="container mt-4">
  <h1 class="mb-4">Tweets</h1>
  <div class="mb-3">
    <%= link_to "Create New Tweet", new_tweet_path, class: "btn btn-primary" %>
  </div>
  <div class="row">
    <% @tweets.each do |tweet| %>
      <div class="col-md-6 mb-4">
        <div class="card">
          <div class="card-body">
            <h2 class="card-title h5">
              <%= link_to tweet.content, tweet_path(tweet), class: "text-decoration-none" %>
            </h2>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>