<div class="container">
<header class="blog-header py-3">
    <div class="row flex-nowrap justify-content-between align-items-center">
      <div class="col-4 pt-1">
        
        
         <% if user_signed_in? %>
         
          
            <%= link_to "My Blogs", user_blogs_path(current_user), class: "link-secondary"%>
          
          
        <% end %>
       
            <%= link_to "Tweets", tweets_path, class: "link-secondary" %>
          
        
      </div>
      <div class="col-4 text-center">
       
        <%=link_to "BlogNest",root_path ,class:"blog-header-logo text-dark"%>
      </div>
      <div class="col-4 d-flex justify-content-end align-items-center">
        
      
       <%if user_signed_in?%>
       <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-sm btn-outline-secondary", data: { confirm: "Are you sure you want to log out?" } %>
       <%else%>
        <%= link_to "Sign up", new_user_registration_path, class: "btn btn-sm btn-outline-secondary"  %>
          
          
            <%= link_to "Log in", new_user_session_path, class: "btn btn-sm btn-outline-secondary"  %>
       <%end%>
           
          
      </div>
    </div>
  </header>

  
</div>