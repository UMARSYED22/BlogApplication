<h1 class="mb-4">Edit Blog</h1>

<%= form_with(model: @blog, local: true, class: "needs-validation") do |form| %>
  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :body, class: "form-label" %>
    <%= form.text_area :body, class: "form-control", rows: 5, required: true %>
  </div>

  <div class="mb-3">
    <%= form.submit "Update Blog", class: "btn btn-primary" %>
    <%= link_to "Back", blogs_path, class: "btn btn-secondary ms-2" %>
  </div>
<% end %>