<div class="container mt-4">
  <h1 class="mb-4">My Blogs</h1>
  <p><%= link_to "New Blog", new_blog_path, class: "btn btn-primary" %></p>
  <div class="mb-4">
    <% @blogs.each do |blog| %>
      <div class="card mb-2">
        <div class="card-body">
          <h5 class="card-title">
            <%= link_to blog.title, blog_path(blog), class: "text-decoration-none" %>
          </h5>
          <p class="card-text"><%= truncate(blog.body, length: 100) %></p>
          <div class="d-flex justify-content-between">
            <p class="card-text text-muted"><%= blog.created_at.strftime("%Y-%m-%d %H:%M") %></p>
            <div>
                <% if blog.draft? %>
  <%= button_to 'Publish', publish_blog_path(blog), method: :patch, class: 'btn btn-primary' %>
<% end %>
              <%= link_to "Edit", edit_blog_path(blog), class: "btn btn-warning me-2 mb-3" %>
              <%= button_to "Delete", blog_path(blog), method: :delete, class: "btn btn-danger", data: { turbo_confirm: "Are you sure?" } %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>