

<div class="container mt-4">
  <h1 class="mb-4">Blogs</h1>
  <div class="d-flex justify-content-between mb-3">
    <%= link_to "Create new Blog", new_blog_path, class: "btn btn-primary" %>
    <%= link_to "Tweets", tweets_path, class: "btn btn-secondary" %>
  </div>

  <div class="row">
    <% @blogs.each do |blog| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <div class="card-body">
            <h2 class="card-title"><%= link_to blog.title, blog_path(blog.id), class: "text-decoration-none" %></h2>
            <p class="card-text"><%= truncate(blog.body, length: 100) %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>